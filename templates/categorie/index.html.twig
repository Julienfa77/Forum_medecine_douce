{% extends 'base.html.twig' %}

{% block title %}{{ 'Categorie Index' | trans }}{% endblock %}

{% block body %}
    <h1>{{ 'Categorie Index' | trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{ 'name' | trans }}</th>
                <th>{{ 'actions' | trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.name }}</td>
                <td>
                    <a href="{{ path('categorie_show', {'id': categorie.id}) }}">{{ 'show' | trans }}</a>
                    <a href="{{ path('categorie_edit', {'id': categorie.id}) }}">{{ 'edit' | trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('categorie_new') }}">{{ 'create new' | trans }}</a><br>
    <hr>
    <a href="{{ path('home') }}">Retour Ã  l'acceuil</a>
{% endblock %}

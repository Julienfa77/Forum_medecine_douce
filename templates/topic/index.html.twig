{% extends 'base.html.twig' %}
{% block stylesheets %}
{{ parent() }}
<link href="https://fonts.googleapis.com/css?family=Baloo+Bhai&display=swap" rel="stylesheet">
<link rel="stylesheet" href="{{ asset('css/article.css') }}">
{% endblock %}

{% block title %}Topic index{% endblock %}

{% block body %}

<div class="container">


    <h1>Topic index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{ 'titre' | trans }}</th>
                <th>{{ 'actions' | trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for topic in topics %}
            <tr>
                <td>{{ topic.id }}</td>
                <td>{{ topic.titre }}</td>
                <td>
                    <a href="{{ path('topic_show', {'id': topic.id}) }}">{{ 'show' | trans }}</a>
                    <a href="{{ path('topic_edit', {'id': topic.id}) }}">{{ 'edit' | trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('topic_new') }}">{{ 'create new' | trans }}</a>
    <hr>
    <a href="{{ path('home') }}">Retour Ã  l'acceuil</a>

    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Topic{% endblock %}

{% block body %}
    <h1>Topic</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ topic.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ topic.titre }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('topic_index') }}">{{ 'back to list' | trans }}</a>

    <a href="{{ path('topic_edit', {'id': topic.id}) }}">{{ 'edit' | trans }}</a>

    {{ include('topic/_delete_form.html.twig') }}
{% endblock %}

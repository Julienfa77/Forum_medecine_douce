{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>{{ 'User Index' | trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{ 'Email' | trans }}</th>
                <th>{{ 'Roles' | trans }}</th>
                <th>{{ 'password' | trans }}</th>
                <th>{{ 'name' | trans }}</th>
                <th>{{ 'actions' | trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.name }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">{{ 'show' | trans }}</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">{{ 'edit' | trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">{{ 'create new' | trans }}</a>
    <hr>
    <a href="{{ path('home') }}">Retour Ã  l'acceuil</a>
{% endblock %}
